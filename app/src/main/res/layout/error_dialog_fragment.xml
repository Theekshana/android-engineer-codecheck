<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/layout_margin">

    <ImageView
        android:id="@+id/imgNoInternet"
        android:layout_width="@dimen/_50dp"
        android:layout_height="@dimen/_50dp"
        android:layout_marginTop="@dimen/layout_marginTop"
        android:contentDescription="@string/todo"
        android:src="@drawable/ic_no_internet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription,ImageContrastCheck"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txtNoInternet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_marginTop"
        android:fontFamily="@font/belleza"
        android:text="@string/no_internet_connection"
        android:textSize="@dimen/text_size_small"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imgNoInternet"
        app:layout_constraintStart_toStartOf="@+id/imgNoInternet"
        app:layout_constraintTop_toBottomOf="@+id/imgNoInternet" />

    <TextView
        android:id="@+id/txtCheckInternet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_marginTop"
        android:fontFamily="@font/belleza"
        android:gravity="center"
        android:text="@string/make_sure_internet"
        android:textSize="@dimen/text_size_small"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/txtNoInternet"
        app:layout_constraintStart_toStartOf="@+id/txtNoInternet"
        app:layout_constraintTop_toBottomOf="@+id/txtNoInternet" />

    <Button
        android:id="@+id/btnRetry"
        android:layout_width="@dimen/btn_width"
        android:layout_height="@dimen/btn_height"
        android:layout_marginTop="@dimen/layout_marginTop"
        android:layout_marginBottom="@dimen/margin_bottom"
        android:fontFamily="@font/belleza"
        android:text="@string/retry"
        android:textSize="@dimen/text_size_small"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txtCheckInternet"
        app:layout_constraintStart_toStartOf="@+id/txtCheckInternet"
        app:layout_constraintTop_toBottomOf="@+id/txtCheckInternet" />

</androidx.constraintlayout.widget.ConstraintLayout>